<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lx_socket.connection.remote_connection">lx\Socket\Connection\RemoteSocketConnection</parameter>
        <parameter key="lx_socket.connection.http_connection">lx\Socket\Connection\HttpSocketConnection</parameter>
        <parameter key="lx_socket.connection.https_connection">lx\Socket\Connection\HttpsSocketConnection</parameter>
    </parameters>

    <services>
        <service id="lx_socket.connection.remote_connection.prototype" class="%lx_socket.connection.remote_connection%" abstract="true">
            <tag name="lx_socket.connection_prototype" type="remote_socket" />
        </service>
        <service id="lx_socket.connection.http_connection.prototype" class="%lx_socket.connection.http_connection%" abstract="true">
            <tag name="lx_socket.connection_prototype" type="http_socket" />
        </service>
        <service id="lx_socket.connection.https_connection.prototype" class="%lx_socket.connection.https_connection%" abstract="true">
            <tag name="lx_socket.connection_prototype" type="https_socket" />
        </service>
    </services>
</container>
